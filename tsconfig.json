{
    "compilerOptions": {
        "outDir": "./build/",
        "skipLibCheck": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": false,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts",
        "src/**/*.spec.tsx"
    ]
}
